<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="o_animate_assets_frontend_js" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/website_animate/static/src/scss/o_animate_frontend.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/website_animate/static/src/js/o_animate.frontend.js"/>
        </xpath>
    </template>

    <template id="o_animate_assets_editor" inherit_id="website.assets_editor">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/website_animate/static/src/scss/o_animate_editor.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/website_animate/static/src/js/o_animate.editor.js"/>
        </xpath>
    </template>
</odoo>
