<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="enark_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='sizing_x']" position="attributes">
            <attribute name="data-selector" add=".row.simple-stepwizard-row > .simple-stepwizard-step"/>
            <attribute name="data-drop-near" add=".row.simple-stepwizard-row"/>
        </xpath>

        <xpath expr="//div[@data-js='background_position']" position="after">
            <div data-js="gradientpicker"
                data-selector="section, .carousel, .parallax, .s_color_blocks_2 .row > div, .s_color_blocks_4 .row > div, .s_team_profile_box">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#" class="dropdown-item"><i class="fa fa-barcode"/>Gradients</a>
                    <div class="dropdown-menu">
                        <a href="#" class="dropdown-item" data-select-class="">None</a>
                        <div class="dropdown-divider"/>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_primary_up"><div class="bg_option_menu_gradient bg_gradient_primary_up d-block mx-auto"/></a>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_primary_down"><div class="bg_option_menu_gradient bg_gradient_primary_down d-block mx-auto"/></a>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_white_up"><div class="bg_option_menu_gradient bg_gradient_white_up_thumb d-block mx-auto"/></a>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_white_down"><div class="bg_option_menu_gradient bg_gradient_white_down_thumb d-block mx-auto"/></a>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_black_up"><div class="bg_option_menu_gradient bg_gradient_black_up d-block mx-auto"/></a>
                        <a href="#" class="dropdown-item" data-select-class="bg_gradient_black_down"><div class="bg_option_menu_gradient bg_gradient_black_down d-block mx-auto"/></a>
                    </div>
                </div>
            </div>

            <div data-selector=".s_text_highlight"
                data-drop-near="section, p, h1, h2, h3, blockquote, .card, .oe_share, .progress"/>
        </xpath>
    </template>
</odoo>
